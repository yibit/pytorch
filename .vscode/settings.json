{
    "files.associations": {
        "*.h": "cpp",
        "*.c": "c",
        "*.cc": "cpp",
        "*.py": "python",
        "tools/*": "shellscript",
        "*.mk": "makefile",
        "*.sh": "shellscript"
    },
    "files.encoding": "utf8",
    "files.exclude": {
        "**/.git": true,
        "**/.pytest_cache": true,
        "**/.DS_Store": true,
        "**/.ipynb_checkpoints": true
    }
}
